<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/background_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/dice_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="-2dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="40dp"
        >

        <TextView
            android:id="@+id/firstLetterTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/buttonshape"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:textColor="#424040"
            android:shadowRadius="50"
            android:textSize="42sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/secondLetterTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:autoSizeTextType="uniform"
            android:layout_marginLeft="1dp"
            android:background="@drawable/buttonshape"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:textColor="#424040"
            android:textSize="42sp"
            app:layout_constraintStart_toEndOf="@+id/firstLetterTextView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/thirdLetterTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:autoSizeTextType="uniform"
            android:layout_marginLeft="1dp"
            android:background="@drawable/buttonshape"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:textColor="#424040"
            android:textSize="42sp"
            app:layout_constraintStart_toEndOf="@+id/secondLetterTextView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fourthLetterTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:autoSizeTextType="uniform"
            android:layout_marginLeft="1dp"
            android:background="@drawable/buttonshape"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:textColor="#424040"
            android:textSize="42sp"
            app:layout_constraintStart_toEndOf="@+id/thirdLetterTextView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fifthLetterTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="1dp"
            android:background="@drawable/buttonshape"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:textColor="#424040"
            android:textSize="42sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/firstLetterTextView" />

        <TextView
            android:id="@+id/sixthLetterTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/buttonshape"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:textColor="#424040"
            android:textSize="42sp"
            app:layout_constraintStart_toEndOf="@+id/fifthLetterTextView"
            app:layout_constraintTop_toBottomOf="@+id/secondLetterTextView" />

        <TextView
            android:id="@+id/seventhLetterTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/buttonshape"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:textColor="#424040"
            android:textSize="42sp"
            app:layout_constraintStart_toEndOf="@+id/sixthLetterTextView"
            app:layout_constraintTop_toBottomOf="@+id/thirdLetterTextView" />

        <TextView
            android:id="@+id/eigthLetterTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/buttonshape"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:textColor="#424040"
            android:textSize="42sp"
            app:layout_constraintStart_toEndOf="@+id/seventhLetterTextView"
            app:layout_constraintTop_toBottomOf="@+id/fourthLetterTextView" />

        <TextView
            android:id="@+id/ninthLetterTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="1dp"
            android:background="@drawable/buttonshape"
            android:gravity="center"
            android:shadowColor="#A8A8A8"
            android:textColor="#424040"
            android:textSize="42sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fifthLetterTextView" />

        <TextView
            android:id="@+id/tenthLetterTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/buttonshape"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:textColor="#424040"
            android:textSize="42sp"
            app:layout_constraintStart_toEndOf="@+id/ninthLetterTextView"
            app:layout_constraintTop_toBottomOf="@+id/sixthLetterTextView" />

        <TextView
            android:id="@+id/eleventhLetterTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/buttonshape"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:textColor="#424040"
            android:textSize="42sp"
            app:layout_constraintStart_toEndOf="@+id/tenthLetterTextView"
            app:layout_constraintTop_toBottomOf="@+id/seventhLetterTextView" />

        <TextView
            android:id="@+id/twelfthLetterTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/buttonshape"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:textColor="#424040"
            android:textSize="42sp"
            app:layout_constraintStart_toEndOf="@+id/eleventhLetterTextView"
            app:layout_constraintTop_toBottomOf="@+id/eigthLetterTextView" />

        <TextView
            android:id="@+id/thirteenthLetterTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="1dp"
            android:background="@drawable/buttonshape"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:textColor="#424040"
            android:textSize="42sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ninthLetterTextView"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/fourteenthLetterTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/buttonshape"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:textColor="#424040"
            android:textSize="42sp"
            app:layout_constraintStart_toEndOf="@+id/thirteenthLetterTextView"
            app:layout_constraintTop_toBottomOf="@+id/tenthLetterTextView" />

        <TextView
            android:id="@+id/fifteenthLetterTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/buttonshape"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:textColor="#424040"
            android:textSize="42sp"
            app:layout_constraintStart_toEndOf="@+id/fourteenthLetterTextView"
            app:layout_constraintTop_toBottomOf="@+id/eleventhLetterTextView" />

        <TextView
            android:id="@+id/sixteenthLetterTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/buttonshape"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:textColor="#424040"
            android:textSize="42sp"
            app:layout_constraintStart_toEndOf="@+id/fifteenthLetterTextView"
            app:layout_constraintTop_toBottomOf="@+id/twelfthLetterTextView" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/total_points_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="Running Total:________"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toEndOf="@id/finished_words_list"
        app:layout_constraintTop_toBottomOf="@id/enterWordsEditText"
        />

    <TextView
        android:id="@+id/total_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/total_points_text"
        app:layout_constraintBottom_toBottomOf="@id/total_points_text"
        android:layout_marginRight="25dp"
        tools:text="17"
        android:paddingBottom="3dp"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="80dp"
        android:layout_height="44dp"
        android:background="@android:drawable/btn_default"
        android:text="Start"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/dice_layout"
        app:layout_constraintTop_toBottomOf="@+id/dice_layout" />

    <Button
        android:id="@+id/enter_button"
        android:layout_width="80dp"
        android:layout_height="44dp"
        android:background="@android:drawable/btn_default"
        android:text="Enter"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/start_button"
        app:layout_constraintBottom_toTopOf="@id/enterWordsEditText"
        app:layout_constraintEnd_toStartOf="@id/timer_text"
        app:layout_constraintTop_toBottomOf="@id/dice_layout" />

    <TextView
        android:id="@+id/timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/enter_button"
        app:layout_constraintTop_toBottomOf="@id/dice_layout"
        app:layout_constraintEnd_toEndOf="@id/dice_layout"
        app:layout_constraintBottom_toTopOf="@id/enterWordsEditText"
        tools:text="2:00" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="49dp"
        android:layout_height="42dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/buttonshape"
        android:text="B"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/enterWordsEditText"
        app:layout_constraintTop_toTopOf="@id/enterWordsEditText"
        app:layout_constraintTop_toBottomOf="@id/timer_text"
        app:layout_constraintBottom_toBottomOf="@id/enterWordsEditText"
        />

    <EditText
        android:id="@+id/enterWordsEditText"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@android:drawable/editbox_background_normal"
        android:ems="10"
        android:hint=" Enter Words Here"
        android:imeOptions="actionSend"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@id/dice_layout"
        app:layout_constraintTop_toBottomOf="@+id/start_button"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/finished_words_list"
        android:layout_width="147dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/enterWordsEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:paddingRight="10dp"
        android:paddingLeft="15dp">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>